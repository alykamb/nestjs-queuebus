{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "incremental": true,
        "resolveJsonModule": true,
        "types": [
            "reflect-metadata",
            "jest"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}